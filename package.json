{
  "name": "ctx-tool",
  "displayName": "ctx-tool",
  "description": "Lightweight VS Code extension to link Markdown files by typing `@` / `!@` and to run a `ctx` CLI on the active Markdown file.",
  "version": "0.0.3",
  "license": "MIT",
  "publisher": "terrytwk",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/terrytwk/ctx-tool"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other",
    "Education",
    "AI"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:ctx-tool.ctxPrompt",
    "onCommand:ctx-tool.ctxSave",
    "onCommand:ctx-tool.configureMarkdownSettings",
    "workspaceContains:**/*.md"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ctx-tool.ctxPrompt",
        "title": "Ctx: Prompt current Markdown"
      },
      {
        "command": "ctx-tool.ctxSave",
        "title": "Ctx: Save current Markdown"
      },
      {
        "command": "ctx-tool.configureMarkdownSettings",
        "title": "Ctx: Configure Markdown Settings"
      }
    ]
  },
  "configurationDefaults": {
    "[markdown]": {
      "editor.quickSuggestions": {
        "comments": "on",
        "strings": "on",
        "other": "on"
      },
      "editor.suggestOnTriggerCharacters": true,
      "editor.quickSuggestionsDelay": 50,
      "editor.wordBasedSuggestions": "off",
      "editor.inlineSuggest.enabled": false,
      "editor.snippetSuggestions": "none",
      "editor.suggest.showWords": false,
      "editor.suggest.showSnippets": false,
      "editor.suggest.showClasses": false,
      "editor.suggest.showColors": false,
      "editor.suggest.showConstructors": false,
      "editor.suggest.showConstants": false,
      "editor.suggest.showCustomcolors": false,
      "editor.suggest.showEnums": false,
      "editor.suggest.showEnumMembers": false,
      "editor.suggest.showEvents": false,
      "editor.suggest.showFields": false,
      "editor.suggest.showFiles": true,
      "editor.suggest.showFolders": false,
      "editor.suggest.showFunctions": false,
      "editor.suggest.showInterfaces": false,
      "editor.suggest.showIssues": false,
      "editor.suggest.showKeywords": false,
      "editor.suggest.showMethods": false,
      "editor.suggest.showModules": false,
      "editor.suggest.showOperators": false,
      "editor.suggest.showProperties": false,
      "editor.suggest.showReferences": false,
      "editor.suggest.showStructs": false,
      "editor.suggest.showTypeParameters": false,
      "editor.suggest.showUnits": false,
      "editor.suggest.showUsers": false,
      "editor.suggest.showValues": false
    }
  },
  "menus": {
    "editor/title": [
      {
        "command": "ctx-tool.ctxPrompt",
        "when": "resourceLangId == markdown",
        "group": "navigation@10"
      },
      {
        "command": "ctx-tool.ctxSave",
        "when": "resourceLangId == markdown",
        "group": "navigation@11"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
